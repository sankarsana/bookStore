<manifest xmlns:android="http://schemas.android.com/apk/res/android"

	package="com.bookStore">

	<application
		android:allowBackup="true"
		android:label="@string/app_name"
		android:icon="@drawable/ic_launcher"
		android:supportsRtl="true"
		android:theme="@style/AppThemeLight"
		android:name=".App.App">

		<activity
			android:name="com.bookStore.store.StoreActivity"
			android:label="@string/store">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".store.UpdateBookAct"
			android:label="BookUpdate" />
		<activity
			android:name="com.bookStore.Import.ImportActivity"
			android:label="AddBooks" />
		<activity
			android:name="com.bookStore.Persons.PersonsActivity"
			android:label="@string/distributors" />
		<activity
			android:name=".Cards.CardDatesActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name="com.bookStore.store.SelectBookActivity"
			android:label="@string/selectBook" />
		<activity
			android:name="com.bookStore.Calculation.CalcActivity"
			android:label="@string/inventory" />
		<activity
			android:name="com.bookStore.Calculation.CalcInputAct"
			android:theme="@style/DialogLight" />
		<activity
			android:name="com.bookStore.Reports.JointActivity"
			android:label="@string/reports" />
		<activity
			android:name="com.bookStore.Preference.PrefActivity"
			android:label="PrefActivity" />
		<activity
			android:name="com.bookStore.Preference.PrefReportActivity"
			android:label="@string/reportSettings">
			<intent-filter>
				<action android:name="com.bookStore.preferences.ACTION_PREFERENCE_REPORT" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.bookStore.Preference.BackupAndRestore"
			android:label="@string/savedCopies">
			<intent-filter>
				<action android:name="com.bookStore.preferences.ACTION_BackupAndRestore" />

				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.bookStore.Cards.EditorActivity"
			android:label="Cards.EditorActivity" />
		<activity
			android:name=".Cards.GetMissingBookActivity"
			android:label="@string/selectBook" />
	</application>

</manifest>
