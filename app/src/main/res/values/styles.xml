<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="ToolbarTextAppearance">
		<item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textColor">@color/toolbarText</item>
	</style>

	<style name="ToolbarTextAppearance.Title">
		<item name="android:textSize">20sp</item>
	</style>
	<style name="ToolbarTextAppearance.Subtitle">
		<item name="android:textSize">14sp</item>
	</style>
	<style name="MyToolbar">
		<item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
		<item name="android:background">?colorPrimary</item>
		<item name="android:elevation">4dp</item>
	</style>
	<style name="MyToolbarTheme">
		<!-- color of the menu overflow icon -->
		<item name="android:textColorSecondary">@color/toolbar_icons</item>
	</style>
	<style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
		<item name="android:colorControlActivated">@color/accent</item>
		<item name="android:colorControlHighlight">@color/accent</item>
		<item name="android:colorControlNormal">@color/toolbarText</item>
		<item name="android:textColor">@color/toolbarText</item>
		<item name="android:colorBackground">?colorPrimary</item>
	</style>

	<style name="TextViewStyle" parent="android:Widget.TextView">
		<item name="android:fontFamily">sans-serif-condensed</item>
	</style>


	<style name="listViewLight" parent="android:Widget.ListView">
		<!--<item name="android:background">@color/White</item>-->
		<item name="android:dividerHeight">@dimen/dividerHeight</item>
		<item name="android:divider">@drawable/divider_1_line</item>
		<item name="android:textColor">@color/Dark</item>
		<item name="android:listSelector">@drawable/list_selector</item>
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style>

	<style name="imageButtonStyle" parent="android:Widget.Button">
		<item name="android:background">@drawable/btn_selector_normal</item>
		<item name="android:layout_margin">3dp</item>
		<item name="android:minHeight">@dimen/lineHeight</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
		<item name="background">@drawable/gradient_vertical</item>
		<item name="titleTextStyle">@style/TitleTextStyle</item>
	</style>

	<style name="spinnerStyle" parent="android:Widget.Spinner">
		<item name="android:background">@drawable/apptheme_spinner_background_holo_light</item>
		<item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_light</item>
	</style>

	<style name="MyPopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
		<item name="android:popupBackground">@drawable/gradient_vertical</item>
	</style>


	<style name="EditTextStyle" parent="android:Widget.EditText">
		<item name="android:background">@drawable/input_view_selector</item>
		<item name="android:textColor">@color/gradientBottom</item>
	</style>

	<style name="FragmentDialogActionBarLinearLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/headerHeight</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@drawable/dialog_top</item>
	</style>

	<style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/textLight</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginLeft">@dimen/marginRight</item>
		<item name="android:layout_marginRight">@dimen/marginRight</item>
	</style>

	<style name="DialogTittle" parent="TitleTextStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/lineHeight</item>
		<item name="android:layout_weight">1</item>
		<item name="android:minWidth">@dimen/dialogMinWidth</item>
		<item name="android:maxWidth">@dimen/dialogMaxWidth</item>
		<item name="android:gravity">center</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<!--<item name="android:background">@drawable/dialog_tittle_background</item>-->
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="ActionBarIcon">
		<item name="android:background">@drawable/btn_selector_transparent</item>
		<item name="android:layout_width">@dimen/btnWidthSmall</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="DialogCenterLinearLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:background">@drawable/dialog_bottom_png</item>
	</style>

	<style name="itemTextViewSingleRow">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textSize">@dimen/textSizeLine</item>
	</style>

	<style name="itemTextViewSmallSingleRow" parent="itemTextViewSingleRow">
		<item name="android:textSize">@dimen/textSizeSmall</item>
	</style>

	<style name="lineItemHorizontal">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/lineHeight</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_marginLeft">@dimen/marginLeft</item>
		<item name="android:layout_marginRight">@dimen/marginRight</item>
	</style>

	<style name="lineItemHorizontalSmall" parent="lineItemHorizontal">
		<item name="android:layout_height">@dimen/lineHeightSmall</item>
	</style>

	<style name="lineItemHorizontalColor" parent="lineItemHorizontal">
		<item name="android:background">@color/Dark</item>
	</style>

	<style name="horizontalLineSeparator">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/dividerHeight</item>
		<item name="android:background">@drawable/divider_2_line</item>
	</style>

	<style name="btnSmall">
		<item name="android:layout_width">@dimen/btnWidthSmall</item>
		<item name="android:layout_height">@dimen/btnWidthSmall</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="btnMedium">
		<item name="android:layout_width">@dimen/btnWidthMedium</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="numKeyBtn">
		<item name="android:layout_width">0dip</item>
		<item name="android:minWidth">@dimen/btnWidthMedium</item>
		<item name="android:minHeight">@dimen/btnWidthMedium</item>
		<item name="android:layout_height">@dimen/numKeyBtnHeight</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/textSizeGeneral</item>
	</style>

	<style name="bookDetailTitle">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">30dp</item>
		<item name="android:layout_marginTop">@dimen/lineGapTop</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="bookNewValue">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/marginRight</item>
		<item name="android:layout_marginRight">@dimen/marginRight</item>
		<item name="android:layout_marginBottom">@dimen/lineGapBottom</item>
	</style>

	<style name="bookDetailValue">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/marginRight</item>
		<item name="android:layout_marginRight">@dimen/marginRight</item>
		<item name="android:layout_marginBottom">@dimen/lineGapBottom</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/gradientBottom</item>
	</style>

	<style name="gradientVerticalLine">
		<item name="android:layout_width">1dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/gradient_vertical</item>
	</style>

	<style name="cardTextViewEntry">
		<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/marginLeft</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">@dimen/textSizeLine</item>
	</style>

</resources>