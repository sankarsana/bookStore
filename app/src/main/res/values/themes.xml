<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

	</style>

	<style name="AppThemeDarkActionBar" parent="AppBaseTheme">
		<item name="actionBarStyle">@style/MyActionBar</item>
		<item name="actionBarItemBackground">@drawable/list_selector</item>
	</style>


	<!-- Application light theme. -->
	<style name="AppThemeLight" parent="AppThemeDarkActionBar">
		<item name="android:textColorPrimary">@color/textPrimary</item>
		<item name="android:textColorSecondary">@color/textSecondary</item>

		<item name="android:listViewStyle">@style/listViewLight</item>
		<item name="android:panelFullBackground">@color/gradientBottom</item>
		<item name="android:panelColorForeground">@color/background</item>
		<item name="android:windowBackground">@color/background</item>
		<item name="android:textColor">@color/gradientBottom</item>
		<item name="android:imageButtonStyle">@style/imageButtonStyle</item>
		<item name="android:buttonStyle">@style/imageButtonStyle</item>
		<item name="android:button">@style/imageButtonStyle</item>
		<item name="android:alertDialogStyle">@style/DialogLight</item>

		<item name="android:spinnerStyle">@style/spinnerStyle</item>
		<item name="android:editTextStyle">@style/EditTextStyle</item>
		<item name="popupMenuStyle">@style/MyPopupMenuStyle</item>
		<!--<item name="selectableItemBackground">@drawable/list_selector</item>-->
		<!--<item name="android:dropDownListViewStyle">@style/DropDownList</item>-->

		<item name="android:itemTextAppearance">@android:style/TextAppearance.Medium.Inverse</item>
		<item name="actionMenuTextColor">@color/background</item>

	</style>


	<!-- DialogLight theme. -->
	<style name="DialogLight" parent="@android:style/Theme.Dialog">

		<item name="android:windowNoTitle">true</item>
		<item name="android:listViewStyle">@style/listViewLight</item>
		<item name="android:textColor">@color/gradientBottom</item>
		<item name="android:imageButtonStyle">@style/imageButtonStyle</item>
		<item name="android:buttonStyle">@style/imageButtonStyle</item>
		<item name="android:windowBackground">@drawable/dialog_png</item>
		<item name="android:windowIsFloating">true</item>

		<item name="android:spinnerStyle">@style/spinnerStyle</item>
		<item name="android:editTextStyle">@style/EditTextStyle</item>
		<item name="popupMenuStyle">@style/MyPopupMenuStyle</item>
		<item name="android:itemTextAppearance">@android:style/TextAppearance.Medium.Inverse</item>
		<item name="actionMenuTextColor">@color/background</item>

