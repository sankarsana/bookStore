<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppThemeDarkActionBar" parent="Theme.AppCompat.Light.NoActionBar" />


	<!-- Application light theme. -->
	<style name="AppThemeLight" parent="AppThemeDarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">?colorPrimary</item>
		<item name="colorAccent">@color/accent</item>

		<!--<item name="android:textColor">@color/textPrimary</item>-->
		<item name="android:textViewStyle">@style/TextViewStyle</item>
		<item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>

		<item name="android:listViewStyle">@style/listViewLight</item>
		<item name="android:windowBackground">@color/background</item>
		<item name="android:imageButtonStyle">@style/imageButtonStyle</item>
		<item name="android:buttonStyle">@style/imageButtonStyle</item>
		<item name="android:button">@style/imageButtonStyle</item>
		<!--<item name="android:alertDialogStyle">@style/DialogLight</item>-->

		<item name="android:spinnerStyle">@style/spinnerStyle</item>
		<item name="android:editTextStyle">@style/EditTextStyle</item>
	</style>

	<style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
		<item name="android:textColor">@color/textPrimaryLight</item>
		<item name="android:textColorHint">@color/textDisabledLight</item>
	</style>


	<!-- DialogLight theme. -->
	<style name="DialogLight" parent="@android:style/Theme.Dialog">

		<item name="android:windowNoTitle">true</item>
		<item name="android:listViewStyle">@style/listViewLight</item>
		<item name="android:textColor">@color/gradientBottom</item>
		<item name="android:imageButtonStyle">@style/imageButtonStyle</item>
		<item name="android:buttonStyle">@style/imageButtonStyle</item>
		<item name="android:windowBackground">@drawable/dialog_png</item>
		<item name="android:windowIsFloating">true</item>

		<item name="android:spinnerStyle">@style/spinnerStyle</item>
		<item name="android:editTextStyle">@style/EditTextStyle</item>
		<item name="popupMenuStyle">@style/MyPopupMenuStyle</item>
		<item name="android:itemTextAppearance">@android:style/TextAppearance.Medium.Inverse</item>
		<item name="actionMenuTextColor">@color/background</item>

	</style>
</resources>