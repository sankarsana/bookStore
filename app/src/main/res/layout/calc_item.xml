<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"	android:layout_width="fill_parent"	android:layout_height="wrap_content"	android:padding="4dp">	<TextView		android:id="@+id/calc_bookName"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:textAppearance="?android:attr/textAppearanceSmall"		android:text="@string/bookName"		android:layout_alignParentTop="true"		android:layout_alignParentLeft="true"		android:enabled="false" />	<TextView		android:id="@+id/calc_progress_previous"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:textAppearance="?android:attr/textAppearanceMedium"		android:text="Previous progress"		android:layout_below="@+id/calc_bookName"		android:layout_alignLeft="@+id/calc_bookName"		android:textColor="@color/Grey" />	<TextView		android:id="@+id/calc_count_previous"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:textAppearance="?android:attr/textAppearanceMedium"		android:text="@string/count0"		android:layout_below="@+id/calc_bookName"		android:layout_alignParentRight="true"		android:textColor="@color/Grey" />	<TextView		android:id="@+id/calc_progress"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:textAppearance="?android:attr/textAppearanceMedium"		android:text="Small Text"		android:layout_below="@+id/calc_progress_previous"		android:layout_alignLeft="@+id/calc_bookName" />	<TextView		android:id="@+id/calc_count"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:textAppearance="?android:attr/textAppearanceMedium"		android:text="@string/count0"		android:layout_below="@+id/calc_progress_previous"		android:layout_alignParentRight="true" /></RelativeLayout>